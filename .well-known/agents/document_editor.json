{
  "name": "Document Editor Agent",
  "description": "AI-powered document creation and editing agent with ChromaDB integration.",
  "url": "https://webui.example.com/a2a/agents/document_editor",
  "version": "1.0.0",
  "provider": {
    "name": "web-ui",
    "contact": "simpleflowworks@gmail.com",
    "url": "https://github.com/savagelysubtle/web-ui"
  },
  "documentationUrl": "https://github.com/savagelysubtle/web-ui/blob/main/backend/src/web_ui/agent/A2A_AGENT_CARDS.md#document-editor-agent",
  "capabilities": {
    "streaming": false,
    "pushNotifications": false,
    "stateTransitionHistory": false
  },
  "defaultInputModes": [
    "application/json",
    "text/plain"
  ],
  "defaultOutputModes": [
    "application/json",
    "text/plain"
  ],
  "skills": [
    {
      "id": "create_document",
      "name": "Create Document",
      "description": "Create a new document with optional starter content and format guidance.",
      "tags": ["documents", "creation"],
      "examples": [
        "Create a markdown outline for a quarterly report",
        "create_document:{\"filename\":\"notes.md\",\"document_type\":\"markdown\"}"
      ],
      "inputModes": [
        "application/json"
      ],
      "outputModes": [
        "application/json"
      ]
    },
    {
      "id": "edit_document",
      "name": "Edit Document",
      "description": "Apply editorial changes to an existing document using natural language instructions.",
      "tags": ["documents", "editing"],
      "examples": [
        "Edit the requirements doc to add an accessibility section",
        "edit_document:{\"document_id\":\"doc-123\",\"instruction\":\"Summarise key findings\"}"
      ],
      "inputModes": [
        "application/json"
      ],
      "outputModes": [
        "application/json"
      ]
    },
    {
      "id": "search_documents",
      "name": "Search Documents",
      "description": "Search the managed knowledge base for relevant documents or passages.",
      "tags": ["documents", "search"],
      "examples": [
        "Search project docs for \"OAuth rollout\"",
        "search_documents:{\"query\":\"architecture\",\"limit\":5}"
      ],
      "inputModes": [
        "application/json"
      ],
      "outputModes": [
        "application/json"
      ]
    },
    {
      "id": "chat",
      "name": "Chat",
      "description": "Hold a conversational session with the document editor for guidance or lightweight edits.",
      "tags": ["documents", "chat"],
      "examples": [
        "chat:{\"message\":\"Summarise the attached meeting notes\"}"
      ],
      "inputModes": [
        "application/json",
        "text/plain"
      ],
      "outputModes": [
        "application/json",
        "text/plain"
      ]
    }
  ],
  "securitySchemes": {},
  "security": [],
  "metadata": {
    "workingDirectory": "./tmp/documents",
    "mcpIntegration": true,
    "maxContentSizeBytes": 10485760
  }
}
